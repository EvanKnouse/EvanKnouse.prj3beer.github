<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="prj3beer.Views.SettingsMenu"
             Title="Settings"
             AutomationId="settingsPage">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Celsius"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                x:Name="lblTemp"
                AutomationId="lblTemp"/>
            <Switch IsToggled="true" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" Toggled="Switch_Toggled"
                    x:Name="swTemp" AutomationId="swTemp"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>