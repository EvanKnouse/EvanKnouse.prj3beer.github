             mc:Ignorable="d"
             x:Class="prj3beer.Views.BrandSelectPage"
             AutomationId="totalPage"
             >
    <ContentPage.Content>
        <StackLayout>
            <SearchBar x:Name="searchBeverage" TextChanged="SearchChanged"/>

            <Label x:Name="errorLabel" />

            <ActivityIndicator x:Name="loadingSpinner" />

